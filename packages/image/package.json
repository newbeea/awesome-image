{
  "name": "@awesome-image/image",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.10",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "module": "./dist/index.es.js",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "scripts",
    "assets"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:2 && npm run build:3 && npm run copy",
    "build:2": "patch-package && vue-demi-switch 2 vue && vite --config vite.config.vue2.ts build",
    "build:3": "vue-demi-switch 3 && vite --config vite.config.vue3.ts build",
    "copy": "node ./scripts/copy.js",
    "postinstall": "node ./scripts/postinstall.js",
    "gentype": "node ./scripts/gentype.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vue/composition-api": "^1.4.9",
    "vue-demi": "^0.12.1",
    "vue-template-compiler": "^2.6.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "@awesome-image/services": "workspace:*",
    "@types/node": "^17.0.21",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vitejs/plugin-vue-jsx": "^1.3.8",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.2.1",
    "eslint": "^8.10.0",
    "patch-package": "^6.4.7",
    "sass": "^1.49.9",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vite-plugin-vue2": "^1.9.3",
    "vue-tsc": "^0.29.8"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  }
}
